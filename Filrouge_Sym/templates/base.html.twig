<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Village Green{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/filrouge_css.css') }}">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
        <script type="text/javascript">
            tinymce.init({
                selector: '#produits_libelleLongArticle',
                plugins: 'lists',
                toolbar: 'numlist bullist'
            });
        </script>
    </head>
    <body>
        <div class="container" >
            <header>
              <div class="row">
                <div class="col-9 d-none d-sm-block" style="background-color: #e5e5e5e5; ">
                  <img src="/assets/Charte/HEADER/logoVG.jpg" alt="logo village green" width="269" height="163">
                </div>
                <div class="col-3 d-none d-sm-block" style ="background-color: #e5e5e5e5;">
                  <div style="text-align: right;" class="mt-1">
                  <img width="32" src="/assets/Charte/images/flag_FR.ico" alt="drapeau français">
                  <img width="32" src="/assets/Charte/images/flagUK1.ico" alt="drapeau anglais">
                  </div><br>
                  <div>
                    <div style="text-align: right;" class="mr-3" >
                      {% if not app.user %}
                      <a href="{{ path('app_login')}}" title="Me connecter"><img src = "/assets/Charte/images/login_icon.ico" alt="login_icon" width="32"></a>
                      {% else %}
                      <a href="{{ path('app_logout')}}" title="Me deconnecter"><img src = "/assets/Charte/images/login_icon.ico" alt="login_icon" width="32"></a>
                      {% endif %}
                    </div>
                    <div style="text-align: right;">
                      {% if not app.user %}
                      <a href="{{ path('app_login')}}" title="Me connecter">Connexion</a> 
                      {% else %}  
                      <a href="{{ path('app_logout')}}" title="Me déconnecter">Déconnexion</a> 
                      {% endif %}     
                    </div>
                    <div style="text-align: right;" class="mr-3" >
                      <a href="{{ path('panier')}}" title="Mon_panier"><img src = "/assets/Charte/HEADER/picto panier.png" alt="panier_pic" width="32"></a>
                    </div>
                    <div style="text-align: right;">
                      <a href="{{ path('panier')}}" title="Mon_panier">Mon panier</a>         
                    </div>
                  </div>
                </div>
              </div>
            </header>
            <div class="row">
                <nav class="col-12 navbar navbar-expand-lg navbar-dark bg-dark">
                  <a class="navbar-brand" href="{{path('accueil')}}">Village_green.com</a>
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                
                  <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                      <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          Nos produits
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                          
                          <a class="dropdown-item" href="{{path('souscates',{id:1})}}">Guitares et Basses</a>
                          <a class="dropdown-item" href="{{path('souscates',{id:2})}}">Pianos et Claviers</a>
                          <a class="dropdown-item" href="{{path('souscates',{id:3})}}">Batteries et Percussions</a>
                          <a class="dropdown-item" href="{{path('souscates',{id:4})}}">Instruments à vente</a>
                          <a class="dropdown-item" href="{{path('souscates',{id:5})}}">Sonorisations</a>
                          <a class="dropdown-item" href="{{path('souscates',{id:6})}}">Accessoires</a>
                         
                        </div>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="Services.html">Nos services <span class="sr-only"></span></a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="Aides.html">Aides</a>
                      </li>
                      
                      <li class="nav-item">
                        <a class="nav-link" href="BonneAffaire.html" style="color: red;">Bonnes Affaires !!!</a>
                      </li>
                    </ul>
                    <form class="d-flex">
                      <input class="form-control me-2" type="search" placeholder="Chercher un produit" aria-label="Search">
                      <button class="btn btn-outline-success " type="submit">Rechercher</button>
                    </form>
                  </div>
                </nav>
              </div>
              
        {% block body %}
        
       
        {% endblock %}
        <footer>
            <div class="row" style="background-color: #e5e5e5e5; ">
              <div class="col-12 d-none d-sm-block mt-3">
                <img src="/assets/Charte/BODY/banniere centre 4 pictos.png" alt="banniere_centre" class="w-100" >
              </div>
              <div class="col-12 d-none d-sm-block">
                <img src="/assets/Charte/FOOTER/footer SIMPLE.png" alt="footer_simple" class="w-100" >
              </div>
            </div>
          </footer>
        </div>
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
</html>
