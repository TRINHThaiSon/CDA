{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_5_layout.html.twig' %}
{% block body %}
<div class="row" style="background-color: #e5e5e5e5;">
  <div class="col-12 d-none d-sm-block mt-3" >
      <img src="assets/Charte/images/pre-1972-recordings11.jpg" alt="background_web" class="img-fluid " >
  </div>
  <div class="col-12 d-none d-sm-block mt-1">
    <a href="{{path('accueil')}}" title="Home_page"><img src="/assets/Charte/images/homepage_icon.png" alt="homepage_icon" width="32" >Page d'accueil</a>
  </div> 

  <br>

    <div class="col-12 d-none d-sm-block mt-3">
      <h3 style="text-align: center;">Formulaire d'inscription</h3>      
    </div> 
</div>
<div class="row" style="background-color: #e5e5e5e5;">
    <div class="col-2 d-none d-sm-block" ></div>
    <!--pour mettre la forme au milieu du page-->
    <div class="col-8 d-none d-sm-block">
   {{form_start(form)}}
         <div class="form-group">
               <label for="">Prénom</label>
               {{ form_widget(form.prenomClient)}}
         </div>
         <div class="form-group">
            <label for="">Nom</label>
            {{ form_widget(form.nomClient)}}
         </div>
         <div class="form-group">
            <label for="">Adresse</label>
            {{ form_widget(form.adressClient)}}
         </div>
         <div class="form-group">
            <label for="">Code postal</label>
            {{ form_widget(form.cpClient)}}
         </div>
         <div class="form-group">
            <label for="">Ville</label>
            {{ form_widget(form.villeClient)}}
         </div>
         <div class="form-group">
            <label for="">Numéro de téléphone</label>
            {{ form_widget(form.contactClient)}}
         </div>
         <div class="form-group">
            <label for="">Type de client</label>
            {{ form_widget(form.typeClient)}}
         </div>              
         
         {{ form_rest(form)}}
         <button type="submit" class="btn btn-primary">Submit</button>
         <button type="reset" class="btn btn-primary">Annuler</button>
    {{form_end(form)}} <br>
    </div> 
</div>     
{% endblock %}