{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="row" style="background-color: #e5e5e5e5;">
    <div class="col-12 d-none d-sm-block mt-3" >
        <img src="assets/Charte/images/pre-1972-recordings11.jpg" alt="background_web" class="img-fluid " >
    </div>
    <div class="col-12 d-none d-sm-block mt-1">
      <a href="{{path('accueil')}}" title="Home_page"><img src="/assets/Charte/images/homepage_icon.png" alt="homepage_icon" width="32" >Page d'accueil</a>
    </div>
    <div class="col-3 d-none d-sm-block" ></div>
    <!--pour mettre la forme au milieu du page-->
    <div class="col-6 d-none d-sm-block">
    
    <form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %} <br>

    <h1 class="h3 mb-3 font-weight-normal" style="text-align: center;">Vous avez déjà un compte client?</h1>
    <p class="mb-3 font-weight-normal" style="text-align: center;">( Il faut d'abord se connecter pour passer une commande)</p>
    <div>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    </div><br>
    <div>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
    </div> 
    <div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    </div><br>
    <div style="text-align: center;">
    <button class="btn btn-lg btn-primary" type="submit" >
        Se connecter
    </button>
    
    </div><br><hr>
    </form><br>
    <div>
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center;">Vous êtes nouveau ici?</h1>
    </div>
    <div style="text-align: center;">
     <a href="{{ path('app_register')}}">   <button class="btn btn-lg btn-success" type="submit" >
         S'inscrire maintenante
        </button></a>
    <div>  
     <a href="">Pour plus d'informations</a>   
    </div> 
    </div><br><br>
    
</div>
</div>

{% endblock %}
